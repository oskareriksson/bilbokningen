extends layout

block content

  .container-fluid
    .row
      .col-xs-12.text-center
        h1 Hello! You can register yourself here
      .col-xs-12.text-center
        form(method="POST" action="/users/register")
            .form-group
              label(for="username") Username
              input(type="text" name="username" id="username" class="form-control" placeholder="Enter desired username")
            .form-group
              label(for="password") Password
              input(type="password" name="password" id="password" class="form-control" placeholder="Enter desired password")
            .form-group
              label(for="email") Email
              input(type="email" name="email" id="email" class="form-control" placeholder="Enter your email adress")
            .form-group
              label(for="firstName") First name
              input(type="text" name="firstName" id="firstName" class="form-control" placeholder="Enter your first name")
            .form-group
              label(for="lastName") Last name
              input(type="text" name="lastName" id="lastName" class="form-control" placeholder="Enter your last name")
            .form-group
              label(for="phoneNumber") Phone number
              input(type="number" name="phoneNumber" id="phoneNumber" class="form-control" placeholder="Enter your phonenumber")
            button(type="submit" class="btn btn-default") Register